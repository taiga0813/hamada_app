<!DOCTYPE html>
<html>
  <head>
    <title>HamadaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <dev class=" notification is-info">
        <p class="notice"><%= notice %></p>
      <div>
    <% end %>
    
    <% if flash[:alert] %>
      <dev class=" notification is-danger">
        <p class="alert"><%= alert %></p>
      </dev>
    <% end %>
    <%= yield %>
  </body>
</html>
